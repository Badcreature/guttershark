package net.guttershark.util.crypt{	/**	 * Encodes and decodes a base8 (hex) string.	 * @see http://en.wikipedia.org/wiki/Octal	 */	final public class Base8	{		/**		 * Encodes a string as base8.		 * 		 * @param src The string to encode.		 */		public static function encode(src:String):String 		{			var result:String = new String("");			var i:int = 0;			var l:int = src.length;			for(i;i<l;i++) result += src.charCodeAt(i).toString(16);			return result;		}		/**		 * Decodes a base8 string.		 * 		 * @param src The string to decode 		 */		public static function decode(src:String):String 		{			var result:String = new String("");			var i:int = 0;			var l:int = src.length;			for(i;i<l;i+=2) result += String.fromCharCode(parseInt(src.substr(i,2),16));			return result;		}	}}