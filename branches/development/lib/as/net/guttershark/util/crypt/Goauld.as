package net.guttershark.util.crypt{	/**	 * Encodes and decodes a Goauld string.	 */	final public class Goauld	{		private static const SHIFT_VALUE:int = 6;		/**		 * Encodes and decodes a Goauld string with the character code shift value.		 * 		 * @param src The string to calculate.		 */		public static function calculate(src:String):String 		{			var result:String = new String("");			var i:int = 0;			var l:int = src.length;			for(i;i<l;i++) 			{				var charCode:Number = src.substr(i,1).charCodeAt(0);				result += String.fromCharCode(charCode ^ SHIFT_VALUE);			}			return result;		}		}}