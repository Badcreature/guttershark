<?xml version="1.0" encoding="utf-8"?>
<site>
	<assetPaths basePath="assets/">
		<bitmapPath>bmp/</bitmapPath>
		<soundPath>sounds/</soundPath>
		<swfPath>swf/</swfPath>
		<flvPath>flv/</flvPath>
		<xmlPath>xml/</xmlPath>
	</assetPaths>
	
	<assets>
		<asset libraryName="" source="*.jpg" />
	</assets>
	
	<preload>
		<asset libraryName="clayBanner1" />
	</preload>
	
	<!-- OPTIONAL ELEMENTS -->
	<services>
		<remoting>
			<endpoint id="amfphp" gateway="http://localhost/amfphp/gateway.php" useLimiter="true" maxRetries="5" callTimeout="5000" objectEncoding="3">
				<service id="service1" useCache="false" cacheExpireTimeout="-1">com.myphp.Service1</service>
				<service id="service2" useCache="false" cacheExpireTimeout="-1">com.myphp.Service2</service>
			</endpoint>
		</remoting>
	</services>
</site>