package{	import fl.controls.Button;		import net.guttershark.control.DocumentController;	import net.guttershark.display.video.FLV;			import net.guttershark.display.HeatMap;	public class Main extends DocumentController	{				private var flv:FLV;		public var playb:Button;		public var pauseb:Button;		public var resume:Button;		private var h:HeatMap;		public function Main()		{			super();		}				override protected function setupComplete():void		{			trace("Word");			h = new HeatMap();			em.handleEvents(playb,this,"onPlay");			em.handleEvents(pauseb,this,"onPause");			em.handleEvents(resume,this,"onResume");			flv = new FLV();			flv.load("gears_madworld.flv",4);			addChild(flv.video);			//flv.play();			addChild(h);		}				public function onPlayClick():void		{			flv.play();		}				public function onPauseClick():void		{			trace("pause");			flv.pause();		}				public function onResumeClick():void		{			flv.resume();		}	}}