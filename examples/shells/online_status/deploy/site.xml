<?xml version="1.0" encoding="utf-8"?>
<site>
	<assetPaths basePath="assets/">
		<bitmapPath>bmp/</bitmapPath>
		<soundPath>sounds/</soundPath>
		<swfPath>swf/</swfPath>
		<flvPath>flv/</flvPath>
	</assetPaths>
	<assets>
		<asset libraryName="clayBanner1" source="clay_banners_1.jpg" />
		<asset libraryName="clayBanner2" source="clay_banners_2.jpg" />
		<asset libraryName="clayWebpage" source="clay_webpage.jpg" />
	</assets>
	<preload>
		<asset libraryName="clayBanner1" />
		<asset libraryName="clayBanner2" />
		<asset libraryName="clayWebpage" />
	</preload>
	<!-- OPTIONAL ELEMENTS -->
	<services>
		<remoting>
			<endpoint id="amfphp" gateway="http://localhost/amfphp/gateway.php" useLimiter="true" maxRetries="5" callTimeout="5000" objectEncoding="3">
				<service id="service1">com.myphp.Service1</service>
				<service id="service2">com.myphp.Service2</service>
			</endpoint>
		</remoting>
	</services>
</site>